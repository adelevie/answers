<% set_meta_tags  description: "Search results for #{query}.",
                  canonical: ENV['official_government_long_url'].to_s + request.fullpath,
                  title: "Search results for #{query}." %>

<div class="page-container search">
  <div class="row">
    <div class="span9">
      <div class="main-content">
        <div class="header">
          <h1>Search results for: "<strong><%= query %></strong>"</h1>
          <br/>

          <% if results.empty? %>
            <p>Sorry, no results found for "<%= query %>".  Please try rephrasing your search terms.</p>
          <% else %>
            <ul>
              <% results.each do |question| %>
                  <li class="article-listing">
                    <%= content_tag( :h2, link_to( question.text, answer_path(question) ) ) %>
                  </li>
              <% end %>
            </ul>
          <% end -%>
        </div>
      </div>
    </div>
    <div class="span3">

    </div><!-- /span3 -->
  </div>
</div>

