module Answers
  module <%= namespacing %>
    class Mailer < ActionMailer::Base

      def confirmation(<%= singular_name %>, request)
        @<%= singular_name %> = <%= singular_name %>
        mail :subject  => Answers::<%= namespacing %>::Setting.confirmation_subject,
             :to       => <%= singular_name %>.email,
             :from     => "\"#{Answers::Core.site_name}\" <#{Answers::Authentication.email_from_name}@#{request.domain}>",
             :reply_to => Answers::<%= namespacing %>::Setting.notification_recipients.split(',').first
      end

      def notification(<%= singular_name %>, request)
        @<%= singular_name %> = <%= singular_name %>
        mail :subject  => Answers::<%= namespacing %>::Setting.notification_subject,
             :to       => Answers::<%= namespacing %>::Setting.notification_recipients,
             :from     => "\"#{Answers::Core.site_name}\" <#{Answers::Authentication.email_from_name}@#{request.domain}>"
      end

    end
  end
end
