<%# set_meta_tags description: @question.preview,
                 canonical: ENV['OFFICIAL_GOVERNMENT_URL'] + request.fullpath
                 title: [@question.text] %>

<p id="notice"><%= notice %></p>

<div class="page-container article">
  <div class="breadcrumbs">
    <ol><%= render_breadcrumbs :tag=> :li, :separator =>" > " %></ol>
  </div>

  <div class="pure-g">

  <div class="row">

      <div class="main-content">
        <div class="pure-u-1-1">
        <div class="search-div">
          <form role="form" id="search" action="search" name="search" method="get" autocomplete="off">
            <div>
              <input type="text" name="q" id="query" class="help-search form-control help-search-icon" title="query" autofocus="autofocus" placeholder="Ask Us your question">
              <input type="submit" name="submit" class="sr-only" value="SEARCH" />
            </div>
          </form>
        </div>
      </div>

        <div class="pure-u-3-4">
        <div class="header">
          <%= content_tag(:h1, @question.text ) %>
        </div>
        <% @question.answers.each do |answer| %>
          <div class="content-text">
            <%= raw answer.text %>
          </div>
        <% end %>
      </div>
    <!-- 3/4 -->
    <div class="pure-u-1-4">
      <%= render :partial => 'shared/articles_sidebar' %>
    </div><!--pure-u-1-4-->
  </div>
  </div>
</div></div>