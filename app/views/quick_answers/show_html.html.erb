<% set_meta_tags description: @article.preview,
                 canonical: ENV['OFFICIAL_GOVERNMENT_URL'] + request.fullpath
                 title: [@article.category.name, @article.title] %>
<div class="page-container article">
  <div class="breadcrumbs">
    <%= link_to( "Home", root_url) %>
    >
    <%= link_to(@article.category.name, @article.category) %>
    >
    <%= @article.title %>
  </div>
  <div class="row">
    <div class="span9">
      <div class="main-content">
        <h3 class="content-type"><%= format_article_type(@article.type) %></h3>
        <div class="header">
          <%= content_tag(:h1, @article.title ) %>
        </div>
        <div class="content-text">
          <%= raw @content_html %>
        </div>
      </div>
    </div><!-- /span9 -->
    
    <div class="span3">
      <%= render :partial => 'shared/articles_sidebar' %>
    </div><!-- /span3 -->
    
  </div>
</div>
