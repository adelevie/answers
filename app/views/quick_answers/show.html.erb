<% set_meta_tags description: article.preview,
                 canonical: ENV['OFFICIAL_GOVERNMENT_URL'] + request.fullpath,
                 title: [article.category.try(:name), article.title] %>

<div class="article">
  <div class="breadcrumbs">
    <ol><%= render_breadcrumbs :tag=> :li, :separator =>" > " %></ol>
  </div>
  <%= render "shared/research" %>
  <div class="row">
    <div class="span9">
      <div class="main-content">
        <h3 class="content-type"><%= format_article_type(article.type) %></h3>
        <div class="header">
          <%= content_tag(:h1, article.title ) %>
        </div>
        <div class="content-text">
          <% if content_main.present? %>
            <div class="quick_top">
              <%= content_main.html_safe %>
            </div>
          <% end %>
        </div>
        <% if content_main_es.present? %>
          <div class="header">
            <%= content_tag(:h1, article.title_es ) %>
          </div>
          <div class="content-text">
            <div class="quick_top">
              <%= content_main_es.html_safe %>
            </div>
          </div>
        <% end %>
        <% if content_main_cn.present? %>
          <div class="header">
            <%= content_tag(:h1, article.title_cn ) %>
          </div>
          <div class="content-text">
            <div class="quick_top">
              <%= content_main_cn.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div><!-- /span9 -->

    <div class="span3">
      <%= render partial: 'shared/articles_sidebar', locals: {article: article} %>
    </div><!-- /span3 -->
    <%= render 'shared/article_footer' %>
  </div>
  <div class="breaker"></div>
</div>
